		},
		"default_popup": "popup.html",
		"default_title": "DoomScrollKiller"
	},

	"author": "Christian Price",

	"background": {
		"scripts": ["common.js", "background.js"]
	},

	"browser_specific_settings": {
		"gecko": {
			"id": , # CHANGE ME
