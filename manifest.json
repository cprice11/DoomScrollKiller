		{
			"matches": ["<all_urls>"],
			"css": ["content.css"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],

	"default_locale": "en",

	"description": "__MSG_extensionDescription__", # CHANGE ME

	"homepage_url": "https://www.proginosko.com/leechblock/", # CHANGE ME

